#!/bin/sh

PATH=/bin:/usr/bin:/usr/sbin

SUIDBINS="${PKG_PREFIX}/sbin/gnokiid ${PKG_PREFIX}/sbin/mgnokiidev"
BINS="${PKG_PREFIX}/bin/gnokii ${SUIDBINS}"

if [ -e ${PKG_PREFIX}/bin/xgnokii ]; then
	BINS="$BINS ${PKG_PREFIX}/bin/xgnokii"
fi

case "$2" in
"POST-INSTALL")
	chgrp gnokii $BINS
	chmod 750 ${BINS}
	chmod u+s ${SUIDBINS}
	;;

esac
